<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rgbtnNumbers"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/llayoutGrup1"
            android:layout_above="@+id/llayoutGrup2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="28dp">
            <Button
                android:layout_centerVertical="true"
                android:text="0"
                android:id="@+id/btn0"
                style="@style/styleButton"
                android:layout_weight="1"/>

            <Button
                android:text="1"
                android:id="@+id/btn1"
                android:layout_alignTop="@+id/btn0"
                android:layout_toRightOf="@+id/btn0"
                android:layout_toEndOf="@+id/btn0"
                style="@style/styleButton"
                android:layout_weight="1"/>

            <Button
                android:text="2"
                android:id="@+id/btn2"
                android:layout_alignTop="@+id/btn1"
                android:layout_toRightOf="@+id/btn1"
                android:layout_toEndOf="@+id/btn1"
                style="@style/styleButton"
                android:layout_weight="1"/>

            <Button
                android:text="3"
                android:id="@+id/btn3"
                android:layout_alignTop="@+id/btn2"
                android:layout_toRightOf="@+id/btn2"
                android:layout_toEndOf="@+id/btn2"
                style="@style/styleButton"
                android:layout_weight="1"/>

            <Button
                android:text="4"
                android:id="@+id/btn4"
                android:layout_alignTop="@+id/btn3"
                android:layout_toRightOf="@+id/btn3"
                android:layout_toEndOf="@+id/btn3"
                style="@style/styleButton"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/llayoutGrup2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp">
            <Button
                android:text="5"
                android:id="@+id/btn5"
                android:layout_below="@+id/btn0"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                style="@style/styleButton"
                android:layout_weight="1"/>

            <Button
                android:text="6"
                android:id="@+id/btn6"
                android:layout_alignTop="@+id/btn5"
                android:layout_toRightOf="@+id/btn5"
                android:layout_toEndOf="@+id/btn5"
                style="@style/styleButton"
                android:layout_weight="1"/>

            <Button
                android:text="7"
                android:id="@+id/btn7"
                android:layout_alignTop="@+id/btn6"
                android:layout_toRightOf="@+id/btn6"
                android:layout_toEndOf="@+id/btn6"
                style="@style/styleButton"
                android:layout_weight="1"/>

            <Button
                android:text="8"
                android:id="@+id/btn8"
                android:layout_alignTop="@+id/btn7"
                android:layout_toRightOf="@+id/btn7"
                android:layout_toEndOf="@+id/btn7"
                style="@style/styleButton"
                android:layout_weight="1"/>

            <Button
                android:text="9"
                android:id="@+id/btn9"
                android:layout_alignTop="@+id/btn8"
                android:layout_toRightOf="@+id/btn8"
                android:layout_toEndOf="@+id/btn8"
                style="@style/styleButton"
                android:layout_weight="1"/>
        </LinearLayout>
    </RadioGroup>

</LinearLayout>